#!/usr/bin/env python3
"""
New llmtk CLI entry point using the refactored package structure.
"""

import sys
import pathlib

# Add the project root to Python path so we can import llmtk
project_root = pathlib.Path(__file__).resolve().parent.parent
sys.path.insert(0, str(project_root))

from llmtk.cli import main

if __name__ == "__main__":
    sys.exit(main())